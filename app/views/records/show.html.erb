<h1 class='record-title'>
  <%= @record.title %>
  <% if @record.url.presence %>
    <span><%= link_to "[アルバムへ]", @record.url %></span>
  <% end %>
</h1>

<p>
  <strong>日付:</strong>
  <%= @record.start_date %>
  ~
  <%= @record.end_date %>
</p>

<p>
  <strong>記録:</strong>
  <%= @record.description %>
</p>

<div class="map-show-canvas"
            data-latitude="<%= @record.latitude %>"
            data-longitude="<%= @record.longitude %>">
</div>

<br>

<div class="center top-textarea">
  <%= link_to 'Edit', edit_record_path(@record) %> |
  <%= link_to 'Back', records_path %> |
  <%= link_to 'Delete', @record, method: :delete %>
</div>
