<p id="notice"><%= notice %></p>

<h1>旅の記録</h1>
<div class="map-index jumbotron"></div>

<div class="five column doubling ui grid">
<% @records.each do |record| %>
    <div class="column">
      <a href="<%= record_path(record) %>">
        <div class="ui vertical fluid menu">
          <div class="header item">
            <%= record.title %>
          </div>
          <div class="item">
            <%= image_tag thumbnail_record_path(record), alt: record.title, size: "150x150" %>
          </div>
        </div>
      </a>
    </div>
<% end %>
</div>

<%= button_to '新しい記録を作成する', new_record_path, method: 'get' %>
